<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <%- include ('../partials/head.ejs') %>
</head>

<body>
    <nav>
        <%- include ('../partials/nav.ejs') %>
    </nav>
    <form action="/plantssch/" method="post" class="signup-form">
        <div class="form-header">
            <h1> Add Plants</h1>
        </div>

        <!-- form body -->
        <div class="form-body">

            <div>
                <label for="plantName" class="label-title"> PlantName
                  </label>
                <input type="text" id="plantName" placeholder="plantName" value="" name="plantName" class="form-input" required>
            </div>
            <div>
                <label for="zipcode" class="label-title">  Zip Code: 
                  </label>
                <input type="text" id="zipcode" placeholder="zipcode" value="" name="zipcode" class="form-input">
            </div>

            <div>
                <label for="hardnesszone" class="label-title">  Hardness Zone: 
                  </label>
                <input type="text" id="hardnesszone" placeholder="hardnesszone" value="" name="hardnesszone" class="form-input" required>
            </div>
            <br/><br/>

            <div>
                <select name="Month" class="label-title" id="sb">
          <option>- Month -</option>
          <option value="January">January</option>
          <option value="Febuary">Febuary</option>
          <option value="March">March</option>
          <option value="April">April</option>
          <option value="May">May</option>
          <option value="June">June</option>
          <option value="July">July</option>
          <option value="August">August</option>
          <option value="September">September</option>
          <option value="October">October</option>
          <option value="November">November</option>
          <option value="December">December</option>
          
</select>
            </div>

            <div>
                <label for="action" class="label-title"> Description</label>
                <textarea id="action" name="action" class="form-input" value="" rows="2" placeholder="action" required> 
				</textarea>
            </div>



            <input type="submit" value="Submit" class="btn">
        </div>
    </form>


</body>

</html>